{
  "name": "mermaid-json",
  "displayName": "MermaidJson",
  "description": "A TypeScript library to generate Mermaid.js diagrams from JSON data",
  "version": "0.1.0",
  "author": "Levi Terry <levi@leviterry.dev>",
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "homepage": "https://github.com/Typcial-Username/MermaidJson",
  "keywords": [
    "mermaid",
    "json",
    "flowchart",
    "graph",
    "diagram"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "prepare": "npm run build",
    "generate-config": "ts-node ./src/scripts/GenerateMermaidConfig.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Typcial-Username/MermaidJson"
  },
  "bugs": {
    "url": "https://github.com/Typcial-Username/MermaidJson/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}